#login
  %fieldset
    = form_for @user_session, :url => {:action => "create"} do |f|
      = f.error_messages
      %div
        = f.label :email
        = f.text_field :email
      %div
        = f.label :password
        = f.password_field :password
      %div
        = f.check_box :remember_me
        = f.label :remember_me
      %div
        = f.submit "Login", :class => 'button'

  %div
    = link_to 'New User', signup_url